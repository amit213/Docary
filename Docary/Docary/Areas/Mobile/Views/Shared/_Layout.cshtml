<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/> 
    <link href="@Url.Content("~/Content/jquery.mobile-1.0rc1.min.css")" rel="stylesheet" type="text/css" /> 
    <link href="@Url.Content("~/Content/screen.mobile.css")" rel="stylesheet" type="text/css" />    
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>    
    <script type="text/javascript">
        $(document).bind("mobileinit", function () {
          $.extend(  $.mobile , { 
                  ajaxEnabled : false
             });
        });
    </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile-1.0rc1.min.js")" type="text/javascript"></script>
    @RenderSection("Head", false)
</head>
<body>
    <div data-role="page">     
        <div data-role="header">
            <div id="title">
                <h1><a href="@Url.Action("Index", "Home")">Docary</a></h1>
            </div>                        
        </div>
        <div data-role="content">
            @RenderBody()           
        </div>               
        @RenderSection("Footer", false)                
    </div>
</body>
</html>
