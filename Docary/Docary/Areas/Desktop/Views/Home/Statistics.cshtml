@{
    ViewBag.Title = "Statistics";
}

@model Docary.ViewModels.Desktop.HomeStatisticsViewModel

@section Menu {
    @{ Html.RenderPartial("_MenuLoggedOn"); }
}

<p>Number of entries: @Model.NumberOfEntries</p>

@if (Model.HasFirstEntry)
{
    <p>First entry: @Model.FirstEntry</p>
}

@if (Model.HasLatestEntry)
{
    <p>Last entry: @Model.LatestEntry</p>
}

@if (Model.HasFirstEntry)
{    
    foreach (var item in Model.PerTag.Items)
    {
        <div><b>@item.Tag.Name:</b> @item.Percentage (@item.Time.Days day(s), @item.Time.Hours hour(s), @item.Time.Minutes minute(s))</div>
        <br />
    }    
}